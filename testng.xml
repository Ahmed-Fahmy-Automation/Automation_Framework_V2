<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Automation Test Suite" parallel="methods" thread-count="3">
    
    <listeners>
        <listener class-name="base.TestListener"/>
    </listeners>

    <test name="UI Tests">
        <classes>
            <class name="tests.LoginTest"/>
            <class name="tests.SearchTest"/>
            <class name="tests.BookingTest"/>
        </classes>
    </test>

    <test name="API Tests">
        <classes>
            <class name="tests.api.ApiBookingTest"/>
        </classes>
    </test>

</suite>
